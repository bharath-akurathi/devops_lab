pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                bat '''
                    set WORKSPACE=%cd%
                    set DEPLOY=C:\\ProgramData\\Jenkins\\.jenkins\\workspace\\deploy_output

                    if not exist "%DEPLOY%" mkdir "%DEPLOY%"
                    copy /Y "%WORKSPACE%\\website\\Event_registration.html" "%DEPLOY%\\Event_registration.html"
                '''
            }
        }

        stage('Serve') {
            steps {
                bat '''
                    set DEPLOY=C:\\ProgramData\\Jenkins\\.jenkins\\workspace\\deploy_output
                    set FILE=%DEPLOY%\\Event_registration.html
                    echo File deployed to: %FILE%
                '''
            }
        }
    }
}
